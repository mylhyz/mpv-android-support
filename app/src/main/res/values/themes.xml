    <!-- You can also inherit from NNF_BaseTheme.Light -->
    <style name="Theme.MPV.FilePickerTheme" parent="NNF_BaseTheme">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_light_secondary</item>
        <item name="colorAccent">@color/md_theme_light_secondary</item>

        <!-- Setting a divider is entirely optional -->
        <item name="nnf_list_item_divider">?android:attr/listDivider</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/Theme.MPV.FilePickerAlertDialogTheme</item>

